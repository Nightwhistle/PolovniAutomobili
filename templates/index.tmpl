<!DOCTYPE html>
<html>
    <head>
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@500;700&display=swap');

            * {
                font-family: 'Quicksand';
            }

            table {
                border-collapse: collapse;
                border: 2px solid black;
            }

            thead {
                background-color: darkslategray;
                color: white;
                border-bottom: 3px solid black;
            }

            th {
                padding: 10px 15px;
            }

            td {
                padding: 5px 15px;
            }

            tbody {
                padding: 0 50px;
            }

            tr {
                border-bottom: 1px solid gray;
            }

            tr:hover:not(.title-row) {
                cursor: pointer;
                background-color: rgb(255, 255, 255);
            }

            .low-mileage {
                color: green;
                font-weight: bold;
            }

            .medium-mileage {
                color: black;
            }

            .high-mileage {
                color: darkred;
            }

            a {
                text-decoration: none;
                color: blue;
            }

            .price {
                font-weight: bold;
                color: blue;
            }

            .opel {
                background-color: lightgray;
            }

            .citroen {
                background-color: lightpink;
            }

            .ford {
                background-color: lightblue;
            }

            .Å¡koda {
                background-color: bisque;
            }

            .renault {
                background-color: lightgreen;
            }

            .peugeot {
                background-color: lightcyan;
            }
        </style>
    </head>
    <body>
        <table>
            <thead>
                <tr class="title-row">
                    <th>Name</th>
                    <th>Price</th>
                    <th>Mileage</th>
                    <th>Year</th>
                    <th>Volume</th>
                    <th>Link</th>
                </tr>
            </thead>
            <tbody></tbody>
            {{ range .Offers }}
            <tr>
                <td class="name"> {{ .Name }} </td>
                <td class="price"> {{ .Price }} </td>
                <td class="mileage"> {{ .Mileage }} </td>
                <td> {{ .Year }} </td>
                <td> {{ .Volume }} </td>
                <td> <a href="{{ .Link }}" target="_blank"> LINK </a></td>
            </tr>
            {{ end }}
        </table>

        <script>
            var names = document.querySelectorAll('.name')
            for (var nameElement of names) {
                nameElement.parentElement.classList.add(getClassForName(nameElement))
            }

            var mileages = document.querySelectorAll('.mileage')
            for (var mileage of mileages) {
                if (Number(mileage.textContent) < 100000) {
                    mileage.classList.add('low-mileage');
                    continue;
                }

                if (Number(mileage.textContent) > 160000) {
                    mileage.classList.add('high-mileage');
                    continue;
                }

                mileage.classList.add('medium-mileage');
            }

            function getClassForName(name) {
                return name.textContent.trim().split(' ')[0].toLowerCase()
            }
        </script>

    </body>
</html>